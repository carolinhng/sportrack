<%# -------------------Block gris foncé----------------------------- %>

<div class="head-block-dark">
  <div class="container">
    <div class="flex align-center justify-between">
      <%= link_to training_path(@training), class: "link-decoration-none" do %>
      <div class="link-head">
        <i class="ri-arrow-left-s-line"></i>
        <h1 class="color-white">Saisir vos données</h1>
      </div>
      <% end %>
      <div><i class="ri-more-2-line icone-sans-fond"></i></div>
    </div>
    <div class="margin-top-16">
      <h2 class="color-white"><%= @training.name %></h2>
      <div>
        <p class="color-white"><%= @training.sport.name %> -
          Crée le <%= @training.created_at.to_date.strftime('%d-%m-%Y') %></p>
      </div>
    </div>
  </div>
</div>

<%# -------------------Form----------------------------- %>

<% @training_exercices.each do | training_exercice |  %>
<%= training_exercice.exercice.name %>
<% end %>
<br>
<% @training.training_exercices.each do |training_exercice| %>
<% training_exercice.training_metrics.each do |training_metric| %>
<%= training_metric.metric %>
<% end %>
<br>
<%# <%= training_exercice.training_metric.id %>
<% end %>

<%# -------------------Form Nested----------------------------- %>

<div class="container">
  <%= simple_form_for(@seance) do |seance_form| %>
    <div>
      <%= seance_form.input :date, order: [:day, :month, :year] %>
      <%= seance_form.date_field :date %>
      <%= seance_form.input :comment, label: "Commentaire", placeholder: "Ajouter une note à l'entrainement", class: "forminput" %>
      <%= seance_form.input :rating, label: "Note", placeholder: "Ajouter une note à l'entrainement", collection: 1..5 %>
      <%= seance_form.input :duration, collection: 1..200, label: "Durée (minutes)", placeholder: "Durée de l'entrainement", class: "forminput" %>
      <%= seance_form.button :submit, 'Enregistrer', class: "btn-primary forminput" %>
    </div>

    <%= seance_form.simple_fields_for :training_values do |training_value_form| %>
      <p>
        <div>
        <%= training_value_form.input :value, label: "Metrics #{}", placeholder: "Ajouter mes données", class: "forminput" %>
        </div>
      </p>
    <% end %>
    <%= seance_form.button :submit, 'Enregistrer', class: "btn-primary forminput" %>
    <div style="height: 200px"></div>

  <% end %>


</div>
