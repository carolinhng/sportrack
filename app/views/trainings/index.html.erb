<div class="container">
      <div class="padding-b">
      <h1>Mes entrainements</h1>
      </div>
      <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">

        <li class="nav-item" role="presentation">
          <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Entrainements</button>
        </li>

        <li class="nav-item" role="presentation">
          <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Historique</button>
        </li>

      </ul>

      <div class="tab-content" id="pills-tabContent">
          <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab" tabindex="0">

<%# ------------------- List des entrainements liés au user et à son sport ----------------------------- %>

    <% @trainings.each do |training| %>
      <%= link_to training_path(training) do %>
        <div class="bloc mt-2 d-flex justify-content-between align-items-center">
          <div>
            <h3><%= training.name %></h3>
            <div class="defaultcardt d-flex mt-2">
              <i class="fa-solid fa-person-walking me-2" style="color: #000000; font-size: 18px;"></i>
              <h3 class="padding-top-1"><%= training.exercices.count %> <%= training.exercices.count <= 1 ? 'exercice' : 'exercices' %></h3>
            </div>
          </div>
          <div>
            <%= link_to training_path(training), data: {turbo_method: :delete } do %>
              <i class="ri-delete-bin-line"></i>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
<%# -------------------HISTORIQUE--------------------------------------- %>
            <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab" tabindex="0">Historique vide

            </div>

          </div>

    </div>

</div>
