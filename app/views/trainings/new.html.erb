<div class="container">
  <%= link_to user_sport_path(@user_sport), class: "link-decoration-none" do %>
    <div class="link-head">
      <i class="ri-arrow-left-s-line"></i>
      <h2>Créer un entrainement</h2>
    </div>
  <% end %>
</div>

<div class="container">
    <%= simple_form_for [@user_sport, @training] do |f| %>
      <%= f.input :name, label: "Nom de l'entrainement", placeholder: "Donner un nom à votre entrainement" %>
      <%= f.input :description, label: 'Description', placeholder: "Décrire votre entrainement" %>
      <%= f.button :submit, 'Ajouter des exercices', class: "btn-secondary btn-background-white" %>
    <% end %>
</div>
