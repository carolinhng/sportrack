 <%# -------------------EN-TETE----------------------------- %>

<%= link_to new_training_training_exercice_path(@training), class: "link-decoration-none" do %>
  <div class="link-head">
    <i class="ri-arrow-left-s-line"></i>
      <h1>Personnalisation de vos données</h1>
  </div>
<% end %>

<%# -------------------RESUME DES DONNES----------------------------- %>

<div class="container flex-gap-16">
  <h2>Par défaut</h2>

  <div class="bloc">
    <div class="defaultcard">
      <i class="ri-file-text-line"></i>
      <h3>Prise de notes</h3>
    </div>

    <div class="defaultcard">
      <i class="ri-timer-flash-line"></i>
      <h3>Durée</h3>
    </div>

    <div class="defaultcard">
      <i class="ri-calendar-line"></i>
      <h3>Date</h3>
    </div>
  </div>
</div>


 <%# -------------------FORM NESTE----------------------------- %>

<div class="container">
  <h2 class="mb-3">Choix de vos données</h2>

    <% @training_exercices.each do |training_exercice|  %>

      <div class="cardform flex-gap-16">
        <div class="border-bottom">
          <h3 class="entete-card"><%= training_exercice.exercice.name %></h3>
        </div>

        <h3 class="ps-3 mb-2 mt-2">Données recommandées</h3>

        <% training_exercice.training_metrics.each do |training_metric| %>
            <div class="card-metric">
              <p class="margin-0"><%= training_metric.metric %> \ <%= training_metric.unit %></p>
                <%= link_to training_metric_path(training_metric), data: { turbo_method: :delete } do %>
                  <div><i class="fa-regular fa-circle-xmark"></i></div>
                <% end %>
            </div>
        <% end %>

        <%= simple_form_for(training_exercice) do |training_exercice_form| %>
            <%= training_exercice_form.simple_fields_for :training_metrics do |f| %>
              <div>
                <%# <%= f.input :metric,
                  # label: "coucou",
                  class: "forminput" %>
              </div>


            <% end %>
            <%= training_exercice_form.button :submit, 'Enregistrer', class: "btn-primary forminput mb-2" %>
        <% end %>

      </div>

    <% end %>


</div>
